<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>OBLECH - Playing</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
<div class="container">
  <h2>Lobby <%= lobby.lobbyId %> - Game in Progress</h2>
  <% if (nickname) { %>
    <p><strong>Logged in as <%= nickname %></strong> | <a href="/logout">Logout</a></p>
  <% } %>
  <div id="gameContainer"></div>

  <div id="actionButtons" style="margin-top:20px;">
    <button onclick="moveCheck()">Check</button>
    <button onclick="openTrumpSelection()">Trump</button>
  </div>

  <div id="handSelection" style="display:none; margin-top:20px;">
    <h3>Select a Hand to Trump</h3>
    <div id="categoryGrid"></div>
    <div id="handModal" class="modal">
      <div class="modal-content">
        <span id="closeModal" class="close">&times;</span>
        <h3 id="modalCategoryTitle"></h3>
        <div id="modalHandOptions" class="modal-hand-options"></div>
      </div>
    </div>
  </div>

  <div id="nextRoundContainer" style="display:none; margin-top:20px;">
    <button onclick="proceedNextRound()" id="proceedButton">Proceed to Next Round</button>
  </div>

  <hr/>
  <button onclick="exitLobby()">Exit Lobby</button>
</div>

<script src="/socket.io/socket.io.js"></script>
<script>
  const initialGameState = <%- JSON.stringify(gameState) %>;
  const userEmail = "<%= userEmail %>";
  const lobbyId = "<%= lobby.lobbyId %>";
</script>
<script src="/script-playing.js"></script>
</body>
</html>
